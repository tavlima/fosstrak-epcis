<assembly>
  <id>src</id>
  <formats>
    <format>zip</format>
    <format>tar.gz</format>
  </formats>
  <includeBaseDirectory>true</includeBaseDirectory>
  <moduleSets>
    <moduleSet>
      <includes>
        <include>org.accada.epcis:epcis-commons</include>
        <include>org.accada.epcis:epcis-repository</include>
        <include>org.accada.epcis:epcis-captureclient</include>
        <include>org.accada.epcis:epcis-queryclient</include>
      </includes>
      <sources>
        <fileSets>
          <fileSet>
            <includes>
              <include>README*</include>
              <include>LICENSE*</include>
              <include>NOTICE*</include>
              <include>pom.xml</include>
            </includes>
          </fileSet>
          <fileSet>
            <directory>src</directory>
            <outputDirectory>src</outputDirectory>
          </fileSet>
        </fileSets>
      </sources>
    </moduleSet>
  </moduleSets>
  <fileSets>
    <fileSet>
      <includes>
        <include>README*</include>
        <include>LICENSE*</include>
        <include>NOTICE*</include>
        <include>pom.xml</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>src</directory>
      <outputDirectory>src</outputDirectory>
    </fileSet>
    <!-- Manually select files from epcis-interop-test. As this module is
         not actually a sub-module of epcis, it can't be simply included 
         in the module set above. -->
    <fileSet>
      <directory>epcis-interop-test</directory>
      <outputDirectory>epcis-interop-test</outputDirectory>
      <includes>
        <include>src/**</include>
        <include>README*</include>
        <include>LICENSE*</include>
        <include>NOTICE*</include>
        <include>pom.xml</include>
      </includes>
    </fileSet>
  </fileSets>
</assembly>